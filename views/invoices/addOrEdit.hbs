<h1 class="page-header">{{viewTitle}}</h1>

<form>
    <div class="row">
    <div class="col-md-6 col-lg-6">
    <div class="form-group">
        <label>Invoice Number</label>
        <input type="number" class="form-control" name="invoice_number" placeholder="INVOICE ID">
    </div>
    <div class="form-group">
       
        <textarea name="invoice_from" class="form-control" cols="20" rows="3">
            Who is this invoice from?
        </textarea>

    </div>
    <div class="form-group">
        <label>Bill To:</label>
        <textarea name="invoice_to" class="form-control" cols="20" rows="3">
            Who is this invoice to?
        </textarea>
    </div>
    </div>
    <div class="col-md-6 col-lg-6">
    <div class="form-group">
        <label>Date</label>
        <input type="datetime-local" class="form-control" name="date" placeholder="Date">
    </div>
    <div class="form-group">
        <label>Due-Date</label>
        <input type="datetime-local" class="form-control" name="due_date" placeholder="Due-Date">
    </div>
    <div class="form-group">
        <label>Sub-Total</label>
        <input type="number" class="form-control" name="sub_total" placeholder="Sub_total">
    </div>
    </div>
   

        <div class="form-group col-2">
            <label>Item-number</label>
            <input type="number" class="form-control" name="items_id" placeholder="Item-Id">
        </div>
        <div class="form-group col-4">
            <label>Type</label>
            <input type="text" class="form-control" name="items_type" placeholder="Type">
        </div>
        <div class="form-group col-2">
            <label>Quantity</label>
            <input type="number" class="form-control" name="items_quantity" placeholder="Quantity">
        </div>
        <div class="form-group col-2">
            <label>Price</label>
            <input type="number" class="form-control" name="items_quantity" placeholder="Quantity">
        </div>
        <div class="form-group col-2">
            <label>Amount</label>
            <input type="number" class="form-control" name="items_amount" placeholder="Amount">
        </div>
    <div class="form-group col-3">
          <button class="btn btn-primary" type="submit" name="add_items"><i class="fa fa-plus" aria-hidden="true"></i>Add Items</button>
    </div>
  
    <div class="col-6 offset-md-6">
        <div class="form-group">
            <label>Discounts</label>
            <input type="number" class="form-control" name="discounts" placeholder="discounts">
        </div>
        <div class="form-group">
            <label>Tax</label>
            <input type="number" class="form-control" name="tax" placeholder="tax">
        </div>
        <div class="form-group">
            <label>Shipping</label>
            <input type="number" class="form-control" name="shipping" placeholder="shipping">
        </div>
        <div class="form-group">
            <label>Total</label>
            <input type="number" class="form-control" name="total" placeholder="total">
        </div>
        <div class="form-group">
            <button class="btn btn-info" type="submit"><i class="fa fa-database"></i>Submit</button>
        </div>

    </div>

</div>
</form>