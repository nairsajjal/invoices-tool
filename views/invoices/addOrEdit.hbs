<h1 class="page-header">{{viewTitle}}</h1>

<form action="/invoice" method="POST" autocomplete="off">
    <div class="row">
    <div class="col-md-6 col-lg-6">
    <div class="form-group">
        <label>Invoice Number</label>
        <input type="number" class="form-control" name="invoice_number" placeholder="INVOICE ID" value="{{invoice.invoice_number}}">
        <div class="text-danger">{{invoice.invoice_numberError}}</div>
    </div>
    <div class="form-group">
       
        <textarea class="form-control" placeholder="Who is this invoice from? (required)" name="invoice_from" expanding-textarea="" cols="20" rows="3" style="resize: none;"value="{{invoice.invoice_from}}"></textarea>
         <div class="text-danger">{{invoice.invoice_fromError}}</div>
    </div>
    <div class="form-group">
        <label>Bill To:</label>
       <textarea class="form-control" placeholder="Who is this invoice to? (required)" name="invoice_to" expanding-textarea="" cols="20" rows="3"style="resize: none;" value="{{invoice.invoice_to}}"></textarea>
         <div class="text-danger">{{invoice.invoice_toError}}</div>
    </div>
    </div>
    <div class="col-md-6 col-lg-6">
    <div class="form-group">
        <label>Date</label>
        <input type="date" class="form-control" name="date" placeholder="Date" value="{{invoice.date}}">
    
    </div>
    <div class="form-group">
        <label>Due-Date</label>
        <input type="date" class="form-control" name="due_date" placeholder="Due-Date" value="{{invoice.due_date}}">
    </div>
    <div class="form-group">
        <label>Sub-Total</label>
        <input type="number" class="form-control" name="sub_total" placeholder="Sub_total" value="{{invoice.sub_total}}">
         <div class="text-danger">{{invoice.sub_totalError}}</div>
    </div>
    </div>
   
        <div class="well well-sm col-12">
            <div class="row" style="padding:0px 0px 0px 0px; margin-bottom:-18px;">
            <div class="form-group col-2" style="padding: 0px 0px 0px 15px">
                <label class="form-control">Item-number</label>
            </div>
            <div class="form-group col-4"  style="padding: 0px 0px 0px 0px">
                <label class="form-control">Type</label>
            </div>
            <div class="form-group col-2" style="padding: 0px 0px 0px 0px">
                <label class="form-control">Quantity</label>
            </div>
            <div class="form-group col-2" style="padding: 0px 0px 0px 0px">
                <label class="form-control">Rate</label>
            </div>
            <div class="form-group col-2" style="padding: 0px 15px 0px 0px">
                <label class="form-control">Amount</label>
            </div>
            </div>

        </div>
        <div class="form-group col-2">
            
            <input type="number" class="form-control" name="items_id" placeholder="Item-Id" required="" value="{{invoice.items_id}}">
             <div class="text-danger">{{invoice.items_idError}}</div>
        </div>
        <div class="form-group col-4">
            
            <input type="text" class="form-control" name="items_type" placeholder="Type"  required="" value="{{invoice.items_type}}">
            <div class="text-danger">{{invoice.items_typeError}}</div>
        </div>
        <div class="form-group col-2">
           
            <input type="number" class="form-control" name="items_quantity" placeholder="Quantity"   required="" value="{{invoice.items_quantity}}">
            <div class="text-danger">{{invoice.items_quantityError}}</div>
        </div>
        <div class="form-group col-2">
            
            <input type="number" class="form-control" name="items_price" placeholder="Price"  required="" value="{{invoice.items_price}}">
            <div class="text-danger">{{invoice.items_priceError}}</div>
        </div>
        <div class="form-group col-2">
            
            <input type="number" class="form-control" name="items_amount" placeholder="Amount"  required="" value="{{invoice.items_amount}}">
            <div class="text-danger">{{invoice.items_amountError}}</div>
        </div>
    <div class="form-group col-3">
          <button class="btn btn-primary" type="submit" name="add_items"><i class="fa fa-plus" aria-hidden="true"></i>Add Items</button>
    </div>
  
    <div class="col-6 offset-md-6">
        <div class="form-group">
            <label>Discounts</label>
            <input type="number" class="form-control" name="discounts" placeholder="discounts" value="{{invoice.discounts}}">
        </div>
        <div class="form-group">
            <label>Tax</label>
            <input type="number" class="form-control" name="tax" placeholder="tax" value="{{invoice.tax}}">
        </div>
        <div class="form-group">
            <label>Shipping</label>
            <input type="number" class="form-control" name="shipping" placeholder="shipping" value="{{invoice.shipping}}">
        </div>
        <div class="form-group">
            <label>Total</label>
            <input type="number" class="form-control" name="total" placeholder="total"  required="" value="{{invoice.date}}">
            <div class="text-danger">{{invoice.totalError}}</div>
        </div>
        <div class="form-group">
            <button class="btn btn-info" type="submit"><i class="fa fa-database"></i>Submit</button>
        </div>

    </div>

</div>
</form>